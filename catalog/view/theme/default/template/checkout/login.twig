                    <label class="control-label" for="input-password">{{ entry_password }}</label>
                    <input type="password" name="password" value="" placeholder="{{ entry_password }}"
                           id="input-password"
                           class="form-control"/>
                    <a href="{{ forgotten }}">{{ text_forgotten }}</a>
                </div>
            </div>
            <button type="button" value="{{ button_login }}" id="button-login" data-loading-text="{{ text_loading }}"
                    class="login-button">{{ button_login }}</button>
        </div>
        <div class="col-sm-6">
            <h2>{{ text_new_customer }}</h2>
            <hr>
            <p>{{ text_checkout }}</p>
            <p>{{ text_register_account }}
            <div id="sign-up-field" style="display: none">
                <div class="form-group">
                    <label class="control-label" for="input-name">{{ entry_firstname }}</label>
                    <input type="text" name="name" value="" placeholder="{{ entry_firstname }}" id="input-name"
                           class="form-control"/>
                </div>
                <div class="form-group">
                    <label class="control-label" for="input-last-name">{{ entry_lastname }}</label>
                    <input type="text" name="last-name" value="" placeholder="{{ entry_lastname }}" id="input-last-name"
                           class="form-control"/>
                </div>
