{{ header }}
<div class="container">
    <div class="container-fluid" align="center">
        <h1>{{ heading_title }}</h1>
    </div>
    <!-- Stepper -->
    <div class="container col-sm-12" align="center">
        <div class="steps-form-2">
            <div class="steps-row-2 setup-panel-2 d-flex justify-content-between">
                <div class="steps-step-2">
                    <a href="#step-1" type="button" class="btn btn-amber btn-circle-2 waves-effect ml-0"
                       data-toggle="tooltip" data-placement="top" title="Basic Information"><span>1</span></a>
                </div>
                <div class="steps-step-2">
                    <a href="#step-2" type="button" class="btn btn-blue-grey btn-circle-2 waves-effect"
                       data-toggle="tooltip" data-placement="top" title="Personal Data"><span>2</span></a>
                </div>
                <div class="steps-step-2">
                    <a href="#step-3" type="button" class="btn btn-blue-grey btn-circle-2 waves-effect"
                       data-toggle="tooltip" data-placement="top" title="Terms and Conditions"><span>3</span></a>
                </div>
                <div class="steps-step-2">
                    <a href="#step-4" type="button" class="btn btn-blue-grey btn-circle-2 waves-effect mr-0"
                       data-toggle="tooltip" data-placement="top" title="Finish"><span>4</span></a>
                </div>
            </div>
        </div>
    </div>
    <hr>
