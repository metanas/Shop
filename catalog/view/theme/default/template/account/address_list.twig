<div id="account-address">
    {% if success %}
        <div class="alert alert-success alert-dismissible"><i class="fa fa-check-circle"></i> {{ success }}</div>
    {% endif %}
    {% if error_warning %}
        <div class="alert alert-warning"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}</div>
    {% endif %}
    <div class="row">
        <div id="content" class="col-sm-8">{{ content_top }}
            <h2>{{ text_address_book }}</h2>
            {% if addresses %}
                <div class="table-responsive">
                    <table class="table table-bordered table-hover">
                        {% for result in addresses %}
                            <tr>
                                <td class="text-left">{{ result.address }}
                                    <span class="text-right">
                                        <a href="{{ result.update }}" class="fa fa-edit"></a> &nbsp; <a
                                                href="{{ result.delete }}"
                                                class="fa fa-close"></a></span>
                                </td>
                            </tr>
                        {% endfor %}
                    </table>
                </div>
            {% else %}
                <p>{{ text_no_results }}</p>
            {% endif %}
            <div class="buttons clearfix">
                <div class="pull-right"><a href="{{ add }}" class="btn btn-primary">{{ button_new_address }}</a></div>
            </div>
            {{ content_bottom }}</div>
        {{ column_right }}</div>
</div>
