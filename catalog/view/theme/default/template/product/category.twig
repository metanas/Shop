<div id="product-category" class="container">
    <div class="row">{{ column_left }}
        {% if column_left and column_right %}
            {% set class = 'col-sm-6' %}
        {% elseif column_left or column_right %}
            {% set class = 'col-sm-9' %}
        {% else %}
            {% set class = 'col-sm-12' %}
        {% endif %}
        <div id="content" class="{{ class }}">
            {{ content_top }}
                <div class="slide-bar-button visible-xs-inline" onclick="openSlide()" style="cursor: pointer">
                    <i class="fa fa-align-justify" style="font-size: 24px"></i>
                </div>
                <h2 style="display: inline">{{ heading_title }}</h2>
            {% if thumb or description %}
                <div class="row">
                    {% if thumb %}
                        <div class="col-sm-12"><img src="{{ thumb }}" alt="{{ heading_title }}"
                                                    title="{{ heading_title }}" class="img-responsive"/></div>
                    {% endif %}
                    {% if description %}
                        <div class="col-sm-12">{{ description }}</div>
                    {% endif %}</div>
            {% endif %}
            <hr>
            {% if products %}
                <div class="row" style="position: relative; z-index: 2;margin-bottom: 15px">
                    <div style="height: 35px; z-index: 2;position: relative">
                        <div class="col-lg-3 col-md-3 col-sm-6 col-xs-6" style="margin-bottom: 10px">
                            <div class="dropdownFilter"
                                 style="position: relative;border: 1px solid #e7e7e7; line-height: 30px;font-weight: normal;z-index: 99">
                                <div class="filter-filter">
                                    {{ text_filter_marque }}<i class="fa fa-angle-down"
                                                               style="float: right; padding: 8px"></i>
                                </div>
                                <div class="dropdown-filter">
                                    <div id="search" class="field input-group stylish-input-group input-append">
                                        <input class="field-input-filter"
                                               placeholder="{{ text_search }}" name="manufacture" value="{{ search }}">
                                        <span class="input-group-addon" style="border: none">
                                            <button id="sub" type="button">
                                                <img class="terms" src="catalog/view/theme/default/image/loupe.png">
                                            </button>
                                        </span>
                                    </div>
                                    <div id="manufacture" class="ScrollStyle">
                                        {% for manufacture in products_manufacture %}
                                            <label class="check_filter check-manufacture"
                                                   style="display: block">{{ manufacture.manufacturer }}
                                                <input class="checkbox" type="checkbox" name="manufacture[]"
                                                       value="{{ manufacture.manufacturer }}" {% if manufacture.isChecked %} checked {% endif %}>
                                                <span class="checkmark"></span>
                                            </label>
                                        {% endfor %}
                                    </div>
                                    <div>
                                        <button type="button" class="filter-done decouvrir"
                                                name="manufacture">{{ text_close }}</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-3 col-sm-6 col-xs-6" style="margin-bottom: 10px">
                            <div class="dropdownFilter"
                                 style="position: relative; border: 1px solid #e7e7e7; line-height: 30px;font-weight: normal;z-index: 99">
                                <div class="filter-filter">
                                    {{ text_filter_color }}<i class="fa fa-angle-down"
                                                              style="float: right; padding: 8px"></i>
                                </div>
                                <div class="dropdown-filter">
                                    <div id="search" class="field input-group stylish-input-group input-append">
                                        <input class="field-input-filter"
                                               placeholder="{{ text_search }}" name="color" value="{{ search }}">
                                        <span class="input-group-addon" style="border: none">
                                            <button id="sub" type="button">
                                                <img class="terms" src="catalog/view/theme/default/image/loupe.png">
                                            </button>
                                        </span>
                                    </div>
                                    <div id="color" class="ScrollStyle">
                                        {% for color in products_colors %}
                                            <label class="check_filter check-color"
                                                   style="display: block">{{ color.color }}
                                                <input class="checkbox" type="checkbox" name="color[]"
                                                       value="{{ color.color }}" {% if color.isChecked %} checked {% endif %}>
                                                <span class="checkmark checkradio"
                                                      style="background-color: {{ color.color_hex }};"></span>
                                            </label>
                                        {% endfor %}
                                    </div>
                                    <div>
                                        <button type="button" class="filter-done decouvrir"
                                                name="color">{{ text_close }}</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-3 col-sm-6 col-xs-6" style="margin-bottom: 10px">
                            <div class="dropdownFilter"
                                 style="position: relative;border: 1px solid #e7e7e7; line-height: 30px;font-weight: normal;z-index: 98">
                                <div class="filter-filter">
                                    {{ text_filter_price }}<i class="fa fa-angle-down"
                                                              style="float: right; padding: 8px"></i>
                                </div>
                                <div class="dropdown-filter">
                                    <div>
                                        <input id="ex12c" type="range" style="width: 100%"/>
                                    </div>
                                    <div id="price" class="container-fluid" style="width: 100%;padding: 0">
                                        <span id="min-price" class="col-md-6">{{ price_min }}</span>
                                        <span id="max-price" class="col-md-6">{{ price_max }}</span>
                                    </div>
                                    <div style="margin-top: 10px">
                                        <label class="promos check_filter">{{ text_Promo }}
                                            <input type="checkbox" name="promo">
                                            <span class="checkmark"></span>
                                        </label>
                                    </div>
                                    <div>
                                        <button type="button" class="filter-done decouvrir"
                                                name="price">{{ text_close }}</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-3 col-sm-6 col-xs-6" style="margin-bottom: 10px">
                            <div class="dropdownFilter"
                                 style="position: relative; border: 1px solid #e7e7e7; line-height: 30px;font-weight: normal;z-index: 98">
                                <div class="filter-filter">
                                    {{ text_filter_size }}<i class="fa fa-angle-down"
                                                             style="float: right; padding: 8px"></i>
                                </div>
                                <div class="dropdown-filter">
                                    <div id="search" class="field input-group stylish-input-group input-append">
                                        <input class="field-input-filter"
                                               placeholder="{{ text_search }}" name="color" value="{{ search }}">
                                        <span class="input-group-addon" style="border: none">
                                            <button id="sub" type="button">
                                                <img class="terms" src="catalog/view/theme/default/image/loupe.png">
                                            </button>
                                        </span>
                                    </div>
                                    <div id="size" class="ScrollStyle">
                                        {% for size in products_size %}
                                            <label class="check_filter check-color"
                                                   style="display: block">{{ size }}
                                                <input class="checkbox" type="checkbox" name="size[]"
                                                       value="{{ size }}">
                                                <span class="checkmark"></span>
                                            </label>
                                        {% endfor %}
                                    </div>
                                    <div>
                                        <button type="button" class="filter-done decouvrir"
                                                name="color">{{ text_close }}</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 filter-content">

                    </div>
                    <div style="position:relative; z-index: 1; margin-top: 30px;">
                        <div class="product-count col-md-6 col-xs-6" style="color: #9da7af">
                            {{ product_total }} articles
                        </div>
                        <div class="col-md-6 col-xs-6" align="right">
                            <span class="hidden-sm hidden-xs" style="color: #9da7af">
                                {{ text_sort }}
                            </span>
                            <select id="input-sort" class="selectpicker"
                                    onchange="location = this.value;">
                                {% for sorts in sorts %}
                                    {% if sorts.value == '%s-%s'|format(sort, order) %}
                                        <option value="{{ sorts.href }}" selected="selected">{{ sorts.text }}</option>
                                    {% else %}
                                        <option value="{{ sorts.href }}">{{ sorts.text }}</option>
                                    {% endif %}
                                {% endfor %}
                            </select>
                            <i class="fa fa-angle-down" style="position: absolute; right: 20px;top: 3px;"></i>
                        </div>
                    </div>
                </div>
                <div class="product-container row">
                    {% for product in products %}
                        <div class="product-layout col-lg-4 col-md-4 col-sm-6 col-xs-6">
                            <span id="product-id" style="display: none">{{ product.product_id }}</span>
                            <a href="{{ product.href }}">
                                <div class="product-thumb transition">
                                    <div class="image">
                                        <img src="{{ product.thumb }}"
                                             alt="{{ product.name }}"
                                             title="{{ product.name }}"
                                             class="img-responsive"
                                             style="width: 100%"
                                        />
                                    </div>
                                    <div class="caption">
                                        <div class="desctip col-sm-12 col-xs-12">
                                            <h4 class="SheosName"><a href="{{ product.href }}">{{ product.name }}</a>
                                            </h4>
                                            {% if product.price %}
                                                {% if not product.special %}
                                                    <p class="SheosPrice">{{ product.price }}</p>
                                                {% else %}
                                                    <span class="price-old SheosPrice">{{ product.price }}</span><br>
                                                    <span class="price-new SheosPrice">{{ product.special }}</span>
                                                {% endif %}
                                            {% endif %}
                                            <div class="same">
                                                {#<p>Disponible en plusieurs tailles</p>#}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </a>
                            <div><img src="{{ product.favorite }}" class="favorite"
                                      title="ajouter au favoris">
                            </div>
                        </div>
                    {% endfor %}
                    <div class="row col-sm-12" style="margin: 30px 0 30px 0">
                        <div class="col-sm-6 text-center pagination">{{ pagination }}</div>
                        {#<div class="col-sm-12 text-center ">{{ results }}</div>#}
                    </div>
                </div>
            {% endif %}
            {% if not categories and not products %}
                <p>{{ text_no_results }}</p>
                <div class="buttons">
                    <div class="pull-right"><a href="{{ continue }}" class="btn btn-primary">{{ button_continue }}</a>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
    <script>
        $('#column-left').removeClass('hidden-xs');
        {#$("#ex12c").slider({#}
            {#id: "slider12c",#}
            {#min: {{ min }},#}
            {#max: {{ max }},#}
            {#range: true,#}
            {#value: [{{ min }}, {{ max }}]#}
        {#});#}
    </script>
</div>
